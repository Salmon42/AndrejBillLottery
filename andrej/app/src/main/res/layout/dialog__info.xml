<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="frontend.dialogs.InfoDialog">

    <TextView
        android:id="@+id/idlg_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="start"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/idlg_scrollview"
        android:layout_below="@+id/idlg_info_title"
        android:layout_centerHorizontal="true"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idlg_info_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp" />

            <Button
                android:id="@+id/idlg_info_button"
                style="@style/AppButtonDialogs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idlg_info_message"

                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:text="@string/fine"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>